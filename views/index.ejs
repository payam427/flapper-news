<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>My AngularJS App</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="bower_components/html5-boilerplate/css/normalize.css">
  <link rel="stylesheet" href="bower_components/html5-boilerplate/css/main.css">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="bower_components/html5-boilerplate/js/vendor/modernizr-2.6.2.min.js"></script>
</head>
<script type="text/ng-template" id="/home.html">
  <div class="page-header">
    <h1>Flapper News</h1>
    <div>
      {{test}}
    </div>
    <div ng-repeat="post in posts | orderBy: '-upvotes'">
      <span  class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)" ></span> <a ng-show="post.link" href="{{post.link}}" >{{post.title}}</a><span ng-hide="post.link">{{post.title}}</span> - upvote {{post.upvotes}}
      <span>
        <a href="#/posts/{{$index}}">Comments</a>
      </span>
    </div>
    <!--<button ng-click="addPost()">Post</button>-->
    <h3>Add a new post</h3>
    <form ng-submit="addPost()" >
      <div class="form-group">
        <input type="text" placeholder="Title" ng-model="title" class="form-control" />
        <br />
        <input type="text" placeholder="Link" ng-model="link" class="form-control" />
        <br />
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
</script>
<script type="text/ng-template" id="/posts.html">
  <h3>
    <a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
    <span ng-hide="post.link">{{post.title}}</span>
  </h3>
  <div ng-repeat="comment in post.comments | orderBy: '-upvotes'" >
    <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span>
    {{comment.upvotes}} - by {{comment.author}}
    <span style="font-size:20px; margin-left:10px;">
      {{comment.body}}
    </span>
  </div>
  <form ng-submit="addComment()" >
    <input type="text" ng-model="body" />
    <button type="submit" class="btn btn-primary">Post</button>
  </form>
</script>
<body>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <ui-view></ui-view>
